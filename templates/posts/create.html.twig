{% extends 'base.html.twig' %}

{% block body %}
    {% form_theme form '/form/fields.html.twig' %}
    {% if id is defined %}
    <div>
    <small class="text-secondary">Edit | Station</small>
    </div>
    <div class="d-flex justify-content-end">
    <a class="btn btn-danger" onclick="return confirm('Naozaj chcete vymazať rádio?')" href="{{ path('radio_delete', {id: id}) }}"><i class="fa-solid fa-trash-can"></i> Delete</a>
    </div>
    {% else %}
    <div>
    <small class="text-secondary">Add | Station</small>
    </div>
    {% endif %}
    <div class="card p-5 mt-4 mb-5">
    {% if id is defined and id is not empty %}
    <img class="img-fluid img-thmb" src="{{ form.vars.value.img }}" alt="radio-image">
    {% else %}
    {% endif %}
    {{ form_start(form,  {'attr': {}}) }}
    {{ form_end(form) }}
    </div>
{% endblock %}
